package frame_Example;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;


public class Frame extends JFrame{
	static JPanel page1 = new JPanel();
	
	/*여기 있는 경로의 이미지를 프레임에서 그려줄거임.*/
	private Image background = new ImageIcon(
			"C:/Users/KDH/eclipse-workspace/Study_Java/mafia/bin/frame_Example/lmage/1.jpg").getImage();//배경이미지
	
	/*생성자입니다.*/
	public Frame() {
		homeframe();
	}
	public void homeframe() {
		setTitle("1");//창의 타이틀
		setSize(400,600);//프레임의 크기
		setResizable(false);//창의 크기를 변경하지 못하게
		setLocationRelativeTo(null);//창이 가운데 나오게
		setLayout(null);
		setVisible(true);//창이 보이게	
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);//JFrame이 정상적으로 종료되게
	}
	
	public void paint(Graphics g) {//그리는 함수
		g.drawImage(background, 0, 0, null);//background를 그려줌
	}
	public static void main(String[] args){
		new Frame();
		Dimension dim = new  Dimension();
		JFrame frame = new JFrame("내용 적으면 위에 나옴");
		
		// 1. JButton의 생성 
		  JButton jbt = new JButton("버튼");

		// 2. 이미지 불러오기
		ImageIcon ii = new ImageIcon("C:/Users/KDH/eclipse-workspace/Study_Java/mafia/bin/frame_Example/lmage/1.jpg");
		// 버튼에 마우스가 올라갔을 때 이미지 변경 시키기

		jbt.setRolloverIcon(new ImageIcon("button1.png"));

		// 버튼에 마우스가 올라갔을 때 풍선도움말 뜨게 하기
		jbt.setToolTipText("버튼1입니다.");

		// 버튼 글자의 수직 위치 변경하기
		jbt.setVerticalTextPosition(JButton.BOTTOM);
		
		// 버튼 글자의 수평 위치 변경하기
		jbt.setHorizontalTextPosition(JButton.RIGHT);

	}
}
