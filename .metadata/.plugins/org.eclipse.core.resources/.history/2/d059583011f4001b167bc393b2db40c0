package ch06_5_instance_static;

public class car {
	//필드
	String model;
	int speed;
	
	//생성자
	car (String model) {
		this.model = model;
	}
		
	//메소드
	void setSpeed(int speed) {
		this.speed = speed;
		
	}
	void run() {
		for(int i = 0; i < 5; i++ ) {
			this.setSpeed((i+1) * 10);
			System.out.println(this.model + "가 달립니다.(시속 : " + this.speed + "km/h");
		}
	}
}
